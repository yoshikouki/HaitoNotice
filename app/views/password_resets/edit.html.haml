- provide(:title, t('.title'))

%h1.h5.pb-4
  = t('.title')

= form_with(url: password_reset_url(params[:id]),
            method: :patch,
            local: true,
            id: "edit-password-reset-form") do |form|

  = form.hidden_field(:email, value: @user.email)

  .mb-4
    = form.label(:password,
                 t('user.password', scope: 'activerecord.models'))
    = form.text_field(:password,
                      id: "user-password",
                      class: "form-control")

  .mb-4
    = form.submit(t('.submit'),
                  id: "submit-password-reset",
                  class: "btn btn-primary btn-block mb-2")

.mb-3
  = link_to(t('helpers.cancel'),
            login_path,
            role: "button",
            id: "cancel",
            class: "btn btn-outline-secondary btn-block")