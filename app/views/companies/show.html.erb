<%# 企業の個別ページ %>

<h1 class="h5">適時開示情報（企業別）</h1>
  

<h2 class="font-weight-bold">
  <%= @res_hash["TDnetList"]["items"]["item"][0]["Tdnet"]["company_name"] %>
</h2>

<div class="mb-4 cleafix">
  <div class="float-left">
    <%= render 'shared/company_symbol', 
                local_code: params[:id],
                market_division: @res_hash["TDnetList"]["items"]["item"][0]["Tdnet"]["markets_string"] %>
  </div>

  <div class="d-flex justify-content-end ">
    <% if logged_in? %>
      <%= render 'shared/watch_form' %>
    <% else %>
      <div class="btn btn-outline-primary"><span class="small">ログインしてウォッチ</span></div>
    <% end %>
  </div>
</div>

<%# TDnet情報を表示 %>
<%= render 'companies/td_list_companypage' %>
