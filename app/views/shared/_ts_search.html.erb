<%# 銘柄コードの検索フォーム %>
<%# WebAPIに直接GETする。200218現在 %>
<div class="ts-search mb-4">
  <%= form_with(url: "/search", method: :get,
                                local: true,
                                id: "ts-search") do |form| %>
    <div class="input-group mb-3">
      <%= form.text_field :ticker_symbol,
                          id: "ts-search-bar",
                          class: "form-control",
                          placeholder: "銘柄コード（４桁）" %>
      <span class="input-group-append">
        <%= button_tag type: "submit", 
                        id: "ts-search-submit",
                        class: "btn btn-outline-secondary" do %>
          <%= icon( 'fas', 'search') %>
        <% end %>
      </span>
    </div>
  <% end %>
</div>

