<%# 銘柄コードの検索フォーム %>
<%# WebAPIに直接GETする。200218現在 %>
<div class="ts-search mb-4">
  <%= form_with(url: "/search", method: :get,
                                local: true) do |form| %>
    <div class="input-group mb-3">
      <%= form.text_field :ticker_symbol, 
                          class: "form-control ts_search_bar",
                          placeholder: "銘柄コード（４桁）" %>
      <span class="input-group-append">
        <%= button_tag type: "submit", class: "btn btn-outline-secondary ts_seatch_submit" do %>
          <%= icon( 'fas', 'search') %>
        <% end %>
      </span>
    </div>
  <% end %>
</div>

