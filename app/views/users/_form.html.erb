<%= form_with( model: @user, local: true) do |form| %>
  <%= render 'form_errors', user: user %>

  <div class="mb-4">
    <%= form.label :name, "アカウント名" %>
    <%= form.text_field :name, id: :user_name, class: 'form-control'  %>
  </div>

  <div class="mb-4">
    <%= form.label :email, "メールアドレス" %>
    <%= form.text_field :email, id: :user_email, class: 'form-control' %>
  </div>

  <div class="mb-4">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, id: :user_password, class: 'form-control' %>
  </div>

  <div class="mb-4">
    <%= form.label :password_confirmation, "確認用パスワード" %>
    <%= form.password_field :password_confirmation, id: :user_password, class: 'form-control' %>
  </div>

  <div class="my-5">
    <%= form.submit yield(:button_text), class: "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
