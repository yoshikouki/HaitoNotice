<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path %>

<div class="my-4">
  <%= paginate @users %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <%= link_to 'Show', user do %>
          <td><%= user.name %></td>
          <%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="my-4">
  <%= paginate @users %>
</div>
