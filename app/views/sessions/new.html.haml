- provide(:title, t('.title'))

%h1.h5.pb-4
  = t('.title')

= form_with(scope: :session,
            url: login_path,
            local: true,
            id: "login-form") do |form|
  .mb-4
    = form.label(:email,
                 t('user.email', scope: 'activerecord.models'))
    = form.text_field(:email,
                      id: "user-email",
                      class: 'form-control')

  .mb-4
    = form.label(:password,
                 t('user.password', scope: 'activerecord.models'))
    = form.password_field(:password,
                          id: "user-password",
                          class: 'form-control')
    .small.text-right.mt-2
      = link_to(t('.forget_password'), new_password_reset_path,
                id: "password-reset-link", class: "text-muted")

  .form-check.mb-4
    = form.label(:remember_me, class: "form-check-label") do
      = form.check_box(:remember_me, class: "form-check-input")
      %span
        = t('.remember_me')

  .mb-3
    = form.submit(t('.submit'), class: "btn btn-primary btn-block")

.my-5
  = link_to(t('.new_account'), signup_path)
