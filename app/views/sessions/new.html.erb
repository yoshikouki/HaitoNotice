
<h1 class="h5 pb-4">ログイン</h1>

<%= form_with( scope: :session, url: login_path,  local: true) do |form| %>
  <%#= render '/users/form_errors', user: user %>

  <div class="mb-4">
    <%= form.label :email, "メールアドレス" %>
    <%= form.text_field :email, id: :user_email, class: 'form-control' %>
  </div>

  <div class="mb-4">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, id: :user_password, class: 'form-control' %>
  </div>

  <div class="form-check mb-4">
    <%= form.label :remember_me, class: "form-check-label" do %>
      <%= form.check_box :remember_me, class: "form-check-input" %>
      <span>ログインを記憶する</span>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.submit "ログイン", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<div class="my-5">
  <%= link_to "アカウント登録", signup_path %>
</div>
